<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <h2>hola contacto</h2>
    <div class="container">
      <div class="form-container">
        <form>
          <label for="nombre" class="contacto-label">Nombre:</label>
          <input
            type="text"
            id="nombre"
            name="name"
            placeholder="Nombre Apellido"
            required
          />
          <label for="consulta" class="contacto-label">Consulta:</label>
          <input
            type="text"
            id="consulta"
            name="name"
            placeholder="Necesito informacion del producto...."
            required
          />
          <label for="celular" class="contacto-label">Celular:</label>
          <input type="number" id="celular" name="name" required />
          <label for="correo" class="contacto-label">Celular:</label>
          <input
            type="email"
            id="correo"
            name="name"
            placeholder="juan@gmail.com"
            required
          />
          <button type="submit">Enviar</button>
        </form>
      </div>
    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
